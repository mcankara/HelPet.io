<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/foundPetLayout"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please add at least one picture"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/upload_image1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/lost_upload_pic_btn"
                android:layout_marginEnd="10dp"/>

            <ImageButton
                android:id="@+id/upload_image2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/lost_upload_pic_btn" />

            <ImageButton
                android:id="@+id/upload_image3"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/lost_upload_pic_btn" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Please upload the photos of the pet you
think that is LOST."
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/lost_gmaps_icon"
                android:layout_marginStart="50dp"/>

            <Button
                android:id="@+id/upload_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="50dp"
                android:text="Click to add a location"
                android:background="@drawable/lost_location_btn"
                android:textAllCaps="false" />


        </LinearLayout>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:text="Description"
            android:textAlignment="center"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="130dp"
            android:hint="Click here to enter description"
            android:inputType="textMultiLine"
            android:background="@drawable/lost_description_field"
            android:textAlignment="center" />

        <Button
            android:id="@+id/submit_lost_btn"
            android:layout_width="166dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/lost_submit_btn"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>


